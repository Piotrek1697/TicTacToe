<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".PlayingActivity">

    <TextView
            android:id="@+id/move_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Player one move (X)"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tictac" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="135dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/image_11"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="27dp"
                        android:onClick="fieldClicked"
                        android:tag="11"
                        app:srcCompat="@drawable/x_mark" />

                <ImageView
                        android:id="@+id/image_12"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginEnd="27dp"
                        app:srcCompat="@drawable/x_mark"
                        android:onClick="fieldClicked"
                        android:tag="12"
                        />

                <ImageView
                        android:id="@+id/image_13"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        app:srcCompat="@drawable/circle"
                        android:onClick="fieldClicked"
                        android:tag="13"
                        />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp">

                <ImageView
                        android:id="@+id/image_21"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="27dp"
                        app:srcCompat="@drawable/circle"
                        android:onClick="fieldClicked"
                        android:tag="21"
                        />

                <ImageView
                        android:id="@+id/image_22"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginEnd="27dp"
                        app:srcCompat="@drawable/x_mark"
                        android:onClick="fieldClicked"
                        android:tag="22"
                        />

                <ImageView
                        android:id="@+id/image_23"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        app:srcCompat="@drawable/circle"
                        android:onClick="fieldClicked"
                        android:tag="23"
                        />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="55dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/image_31"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="27dp"
                        app:srcCompat="@drawable/circle"
                        android:onClick="fieldClicked"
                        android:tag="31"
                        />

                <ImageView
                        android:id="@+id/image_32"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginEnd="27dp"
                        app:srcCompat="@drawable/circle"
                        android:onClick="fieldClicked"
                        android:tag="32"
                        />

                <ImageView
                        android:id="@+id/image_33"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        app:srcCompat="@drawable/x_mark"
                        android:onClick="fieldClicked"
                        android:tag="33"
                        />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>