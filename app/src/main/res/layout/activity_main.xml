<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/study_photo" android:id="@+id/imageView"
                android:scaleType="centerCrop"
                android:alpha="0.9"
        />
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="@string/welcome" android:layout_width="211dp"
                    android:layout_height="129dp"
                    android:id="@+id/textView" android:clickable="false"
                    android:enabled="true" android:textSize="36sp"
                    android:fontFamily="serif-monospace" android:gravity="center_horizontal"
                    android:textColor="#303030"
                    android:textAlignment="center" android:textAllCaps="false"
                    android:shadowColor="#E9E9E9"
                    android:shadowDx="-3" android:shadowDy="4" android:shadowRadius="3" android:textStyle="bold"
                    android:layout_marginTop="90dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="102dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="98dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            <Button
                    android:text="@string/play_with_cpu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/computerPlayButton"
                    android:layout_marginTop="183dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="142dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="141dp" android:textSize="18sp" android:backgroundTint="#9E5DB0F1"/>
            <Button
                    android:text="@string/play_with_other_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/playerPlay"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/computerPlayButton"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="104dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="106dp"
                    android:textSize="18sp" app:layout_constraintHorizontal_bias="0.533"
                    android:backgroundTint="#9E5DB0F1"/>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>